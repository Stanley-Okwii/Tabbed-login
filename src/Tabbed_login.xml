<?xml version="1.0" encoding="utf-8" ?>
<widget id="widget.Tabbed_login" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Tabbed Login</name>
    <description>This widget enables a user to login ,sign up or recover their password when they forget</description>

    <icon />
     <properties>    
        <property key="PersonData" type="entity" required="true">
            <caption>Person object</caption>
            <category>Data to be commited</category>
            <description>This is the entity property</description>
        </property> 
        <property key="_UserName" type="attribute" entityProperty="PersonData" required="true">
            <caption>user Name</caption>
            <category>Data to be commited</category>
            <description>The context data for the object</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property> 
        <property key="_password" type="attribute" entityProperty="PersonData" required="true">
            <caption>Password</caption>
            <category>Data to be commited</category>
            <description>The context data for the object</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>  
            <property key="_Email" type="attribute" entityProperty="PersonData" required="true">
            <caption>Email Address</caption>
            <category>Data to be commited</category>
            <description>The context data for the object</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>  
        <property key="SignupMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Sign up</caption>
            <category>Behavior</category>
            <description>The microflow to execute on sign up</description>
            <returnType type="Boolean" />
        </property>
        <property key="LoginMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Login</caption>
            <category>Behavior</category>
            <description>The microflow to execute on login</description>
            <returnType type="String" />
        </property>
                <property key="ForgetPasswordMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Forgot Password</caption>
            <category>Behavior</category>
            <description>This microflow will be executed when user clicks Reset button</description>
            <returnType type="String" />
        </property>
    </properties>
</widget>

